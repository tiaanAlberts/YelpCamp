<% include ./partials/header %>
<div class="row">
	<div class="col-md-12">
		<form class="form-singin" action="/reset/<%= token %>" method="POST">
		  <legend class="display-4">Reset Password</legend>
		  <div class="form-group">
		    <label for="password" class="sr-only">New Password</label>
		    <input type="password" name="password" value="" placeholder="New password" autofocus="autofocus" class="form-control"/>
		  </div>
		  <div class="form-group">
		    <label for="confirm" class="sr-only">Confirm Password</label>
		    <input type="password" name="confirm" value="" placeholder="Confirm password" class="form-control"/>
		  </div>
		  <div class="form-group">
		    <button type="submit" class="btn btn-primary">Update Password</button>
		  </div>
		</form>
	</div>
</div>
<% include ./partials/footer %>